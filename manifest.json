{
    "manifest_version": 2,
    "name": "LinkShare",
    "description": "Send a link to a mobile phone via SMS using Twilio",
    "version": "1.0",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}